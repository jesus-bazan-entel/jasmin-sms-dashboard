# Jasmin SMS Dashboard - Environment Configuration

# Application Settings
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-jasmin-sms-dashboard-2024
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://jasmin_user:jasmin_password@localhost:5432/jasmin_sms_db
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
ALLOWED_HOSTS=http://localhost:3000,http://127.0.0.1:3000,http://190.105.244.174,https://190.105.244.174

# Jasmin SMS Gateway
JASMIN_HOST=localhost
JASMIN_TELNET_PORT=8990
JASMIN_HTTP_PORT=1401
JASMIN_USERNAME=jcliadmin
JASMIN_PASSWORD=jclipwd
JASMIN_TIMEOUT=30

# SMS Configuration
DEFAULT_SENDER_ID=SMS
SMS_RATE_LIMIT=100
SMS_BATCH_SIZE=1000

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
FROM_EMAIL=noreply@jasmin-dashboard.com

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=csv,xlsx,xls,txt

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/jasmin-dashboard.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Analytics
ANALYTICS_RETENTION_DAYS=365
METRICS_UPDATE_INTERVAL=1

# Webhooks
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# Billing
DEFAULT_CURRENCY=USD
SMS_COST_PER_MESSAGE=0.01

# API Rate Limiting
API_RATE_LIMIT=1000

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
